<% layout('layout') %>
<% title = 'Home' %>

<div class="text-right mb-4">
  <a href="/create" class="btn btn-primary">Create a New Post</a>
</div>

<% if (posts && posts.length > 0) { %>
  <div class="row">
    <% posts.forEach(post => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 post-card" onclick="location.href='/posts/<%= post._id %>';">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.content.substring(0, 100) %>...</p>
            <p class="card-text"><small class="text-muted">Category: <%= post.category %></small></p>
            <p class="card-text"><small class="text-muted">Tags: <%= post.tags.join(', ') %></small></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p class="text-center">No posts yet. Be the first to create one!</p>
<% } %>
